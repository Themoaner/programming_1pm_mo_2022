/*Вариант 6
В текстовом файле input.txt записан русский текст.
Найти в тексте слова, содержащие последовательность из четырех алфавитно упорядоченных букв,
записать их заглавными буквами и указать после каждого такого слова в скобках найденные буквы.
Полученный текст записать в файл output.txt.Весь текст, кроме найденных слов, должен остаться неизменным, включая и знаки препинания.
*/
#include <iostream>
#include <fstream>
#include <string>
#include <windows.h>
int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	setlocale(LC_ALL, "Rus");
	std::ifstream fin("input.txt");
	std::ofstream fout("output.txt");
	std::string str;
	//std::string alphabet = "абвгдеёжзиклмнопрстуфхцчшщъыьэюя";
	std::string alphabet = "abcdefghijklmnopqrstuvwxyz";
	//std::string word[1000], Letters[1000];


	while (fin >> str)
	{
		std::string p = str;

		std::string letters = "";
		for (int i = 0; i < str.length(); i++)
		{
			str[i] = tolower(str[i]);
		}
		while (ispunct(str[0]))
		{
			str.erase(0, 1);
		}
		while (ispunct(str[str.length() - 1]))
		{
			str.erase(str.length() - 1);
		}
		int sum = 1;
		letters += str[0];
		for (int i = 0; i < str.length() - 1; i++)
		{
			//std::cout << str[i] << std::endl;
			if (str[i + 1] >= str[i])
			{
				sum += 1;
				//std::cout << sum << " ";
				letters += str[i + 1];
				//std::cout << letters << std::endl;
			}
			else
			{
				sum = 1;
				letters = "";
				letters += str[i + 1];
			}
			if (sum == 4)
			{
				int ind = str.find(letters);
				for (int i = 0; i < ind; i++)
				{
					if (ispunct(p[i]))
					{
						ind += 1;
					}
				}
				std::cout << ind << std::endl;
				for (int i = ind; i <= ind + 3; i++)
				{ 
					p[i] = toupper(p[i]);
				}
				p += "(" + letters + ")";
				break;
			}
		}
		fout << p << " ";
	}

	/*for (int i = 0; i < size; i++)
	{
		std::cout << word[i] << " " << Letters[i] << std::endl;
		fout << word[i] << " " << Letters[i] << std::endl;
	}
	//std::cout << size;*/

	system("pause");
}
