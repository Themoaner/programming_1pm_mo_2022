#include <iostream>

using namespace std;

int main()
  {
  setlocale(LC_ALL, "rus");
  double A;
  double B;
  double C;
  cin >> A;
  cin >> B;
  cin >> C;
  if ((A < B + C) && (B < A + C) && (C < A + B) && (A > 0) && (B > 0) && (C > 0))
    {
    double p = (A + B + C) / 2;
    cout << sqrt(p*(p - A)*(p - B)*(p - C)) << endl;
    }
  else
    {
    cout << "Такого треугольника не существует!\n";
    }
  system("pause");
  return 0;
  }
