#include <iostream>
#include <SFML/Graphics.hpp>

class AnimatedText
{
private:
	std::string m_text;
	std::string tmp_text;
	int m_duration;
	int m_currentDuration;

	void initSFML(std::string str)
	{
		sf::Font font;
		font.loadFromFile("C:\\Users\\KISidorenko\\Documents\\Visual Studio 2015\\Projects\\лаба1\\лаба1\\caviar-dreams.ttf");
		sf::Text text;
		text.setFont(font);
		text.setCharacterSize(24);
		text.setFillColor(sf::Color::Green);
		text.setPosition(50, 50);
		text.setString(str);
	}


public:

	AnimatedText()
	{
		m_text = "default string";
		m_duration = 28;
	}

	AnimatedText(std::string text, int duration)
	{
		m_text = text;
		m_duration = duration;

	}



};


int main()
{
	std::string str = "Helloworld";

	//AnimatedText(str, 5);


	sf::RenderWindow window(sf::VideoMode(1000, 1000), "test");

	while (window.isOpen())
	{
		/*sf::Font font;
		font.loadFromFile("C:\\Users\\KISidorenko\\Documents\\Visual Studio 2015\\Projects\\лаба1\\лаба1\\caviar-dreams.ttf");
		sf::Text text;
		text.setFont(font);
		text.setCharacterSize(24);
		text.setFillColor(sf::Color::Green);
		text.setPosition(50, 50);
		text.setString("kkkkkkkk");
		sf::Event event;*/
		
		while (window.pollEvent(event))
		{
			if (event.type == sf::Event::Closed)
			{
				window.close();
			}
		}
		window.clear();
		window.draw(text);
		window.display();
	}
	return 0;
}
